{
  "name": "armix-io",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Peter Boyer <@ptboyer>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cd src && reload -b",
    "clean": "rm -rf dist",
    "build": "yarn clean && mkdir -p dist && yarn build-src && yarn build-css",
    "build-src": "cp -r src/* dist",
    "build-css": "purgecss --config ./purgecss.config.js",
    "bundle": "yarn build && cp -r info/* dist && yarn bundle-zip",
    "bundle-zip": "cd dist && zip -r ../bundle.zip *"
  },
  "devDependencies": {
    "purgecss": "^4.0.2",
    "reload": "^3.1.1",
    "tailwindcss": "^2.0.3"
  }
}
